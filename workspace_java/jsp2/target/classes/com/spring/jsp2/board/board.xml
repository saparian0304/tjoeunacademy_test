<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">

	<select id="count" parameterType="com.spring.jsp2.board.BoardVO" resultType="int">
		SELECT count(*) FROM mvcboard
		<where>
			<if test="searchWord != null and searchWord != ''">
			${searchField} LIKE '%${searchWord}%'
			</if>
		</where>
	</select>
	
	<select id="list" parameterType="com.spring.jsp2.board.BoardVO" resultType="com.spring.jsp2.board.BoardVO">
		SELECT * FROM (
			SELECT a.*, rownum rnum FROM (
				SELECT * FROM mvcboard
				<where>
					<if test="searchWord != null and searchWord != ''">
					${searchField} LIKE '%${searchWord}%'
					</if>
				</where>
				ORDER BY idx DESC
			) a
		) WHERE rnum BETWEEN #{start} AND #{end}
	</select>
	
</mapper>